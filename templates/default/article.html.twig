{% extends "base.html.twig" %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block content %}

    <div class="p-3 mx-auto text-center">
        <div class="container">
            <h1 class="display-4">{{ article.title }}</h1>
        </div>
    </div>

    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img class="img-fluid" src="{{ basePath ~ '/images/articles/' ~ article.image }}"
                         alt="{{ article.title }}">
                </div>
                <div class="col-md-6">
                    {{ article.content | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

